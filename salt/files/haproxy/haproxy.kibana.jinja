global
    daemon
    maxconn 1000
    stats socket 127.0.0.1:14567

defaults
    mode http
    timeout connect 2000ms
    timeout client 120000ms
    timeout server 120000ms

userlist basic-auth-list
  group is-admin
  user admin password shadowwood groups is-admin

listen stats
   bind {{ salt['network.interface_ip']('vtnet1') }}:14567
   stats enable
   stats uri /stats

frontend http-in
    bind *:80
    bind *:443 ssl crt /usr/local/etc/letsencrypt/live/{{ grains['fqdn'] }}/{{ grains['fqdn'] }}.pem
    acl is-basic-auth-user-with-group http_auth_group(basic-auth-list) is-admin
    redirect scheme https if !{ ssl_fc }
    default_backend servers if is-admin

backend servers
    acl devops-auth http_auth_group(basic-auth-list) is-admin
    http-request auth realm devops unless devops-auth
    {% for address in salt['mine.get']('G@roles:kibana and not G@roles:haproxy', 'private_ip', tgt_type='compound').items() %}server kibana{{ loop.index }} {{ address[1] }}:5601 maxconn 500 check on-marked-down shutdown-sessions
    {% endfor %}
